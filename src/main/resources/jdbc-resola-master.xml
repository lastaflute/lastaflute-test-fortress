<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//DBFLUTE//DTD LastaDi 1.0//EN"
	"http://dbflute.org/meta/lastadi10.dtd">
<components namespace="jdbc_resola_master">
	<include path="jta.xml"/> <!-- for e.g. transaction manager -->
	<include path="lastaflute_assist.xml"/> <!-- for configuration provider -->

	<component name="xaDataSource" class="org.lastaflute.db.dbcp.HookedXADataSource">
		<property name="driverClassName">
			provider.config().getResolaJdbcDriver()
		</property>
		<property name="URL">
			provider.config().getResolaJdbcUrl()
		</property>
		<property name="user">provider.config().getResolaJdbcUser()</property>
		<property name="password">provider.config().getResolaJdbcPassword()</property>
	</component>

	<component name="connectionPool" class="org.lastaflute.db.dbcp.HookedConnectionPool">
		<!-- main option, required -->
		<property name="maxPoolSize">provider.config().getResolaJdbcConnectionPoolingSize()</property>

		<!-- sub option, not required (setter not called if null)
		<property name="minPoolSize">provider.config().getJdbcConnectionPoolingMinSize()</property>
		<property name="maxWait">provider.config().getJdbcConnectionPoolingMaxWait()</property>
		<property name="timeout">provider.config().getJdbcConnectionPoolingTimeout()</property>
		<property name="suppressLocalTx">provider.config().getJdbcConnectionPoolingSuppressLocalTx()</property>
		<property name="readOnly">provider.config().getJdbcConnectionPoolingReadOnly()</property>
		<property name="validationQuery">provider.config().getJdbcConnectionPoolingValidationQuery()</property>
		<property name="validationInterval">provider.config().getJdbcConnectionPoolingValidationInterval()</property>
		-->

		<!-- may be almost unused (want to change property type if supported)
		<property name="transactionIsolationLevel">provider.config().getOrDefault("resola.jdbc.connection.pooling.transaction.isolation.level", null)</property>
		 -->
	</component>

	<!-- [tips] this component name is used as selectable data source so very important
	 specification: [master or slave] + [Schema keyword] + "DataSource"
	 -->
	<component name="masterResolaDataSource" class="org.lastaflute.db.dbcp.HookedPooledDataSource"/>
</components>
